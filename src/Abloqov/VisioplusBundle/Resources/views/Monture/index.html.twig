{% block content %}
    
    
 <div class="grid_10">
            
            <div class="box round">
            	<h2>Statistiques</h2>
                    <div class="stat-col">
                        <span>Solaires</span>
                        <p class="darkblue">
                            {{ MontureSolaire }}
                        </p>
                    </div>
                    <div class="stat-col">
                        <span>Mixtes</span>
                        <p class="green">
                            {{ MontureMixte }}
                        </p>
                    </div>
                    <div class="stat-col">
                        <span>Hommes</span>
                        <p class="blue">
                            {{ MontureHomme }}
                        </p>
                    </div>
                    <div class="stat-col">
                        <span>Femmes</span>
                        <p class="red">
                            {{ MontureFemme }}
                        </p>
                    </div>
                    <div class="stat-col">
                        <span>Enfants</span>
                        <p class="yellow">
                            {{ MontureEnfant }}
                        </p>
                    </div>
                    <div class="stat-col">
                        <span>Montures</span>
                        <p class="purple">
                            {{ NombreTotalMonture }}
                        </p>
                    </div>
                <div class="block">
                    <div class="clear"></div>
                </div>
            </div>
                    <div class="clear"></div>
            <!-- / ZONE STATISTIQUES -->

            
            <!-- TABLEAU D'ENREGISTREMENT -->
            <div class="box round">
                <div class="block">
                <h1>GESTION DES MONTURES</h1>
                <div class="monture">
                   <table class="data display datatable" >
                                	<thead>
                                    	<th>NÂ°</th>
                                        <th> MARQUES </th>
                                        <th> REFERENCES </th>
                                        <th> GENRE </th>
                                        <th> PRIX </th>
                                        <th> STOCK </th>
                                        <th> CREATION</th>
                                        <th> ACTIONS </th>
                                    </thead>
                                    <tbody>
                                        {% set numero = 0 %}
                                        {% for monture in montures %}
                                            <tr class="">
                                            {% set numero = numero + 1 %}
                                            <td>{{ numero }}</td>
                                            <td class="a-gauche"> {{ monture.marque }} </td>
                                            <td> {{ monture.reference }} </td>
                                            <td> {{ monture.genre }} </td>
                                            <td class="a-droite"> {{ monture.prixvente|number_format('0', '', '.') }} </td>
                                            <td> {{ monture.stock }} </td>
                                            <td> {{ monture.datecreationAt|date('d/m/Y') }} </td>
                                            <td>
                                                <a href="{{ path('monture_edit', { 'id' : monture.id }) }}" title="Modifier la monture"><i class="icon-copy"></i></a> 
                                                &nbsp; | &nbsp; 
                                                <a href="{{ path('monture_show' , { 'id' : monture.id }) }}" title="Voir les details de la monture"> <i class="icon-search"> </i></a>
                                            </td>
                                        </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                                <div class="aller-page">
                                <a href="{{ path('monture_new') }}"><i class="icon-plus"></i> Ajouter une monture</a>
                                </div>
                                </div>
                    <div class="clear"></div>
                </div>
            </div>
            
            
        </div>
    
{% endblock %}