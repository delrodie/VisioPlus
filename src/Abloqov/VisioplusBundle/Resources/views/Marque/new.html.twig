{% block content %}
    

 <div class="grid_10">
            
            <div class="box round">
            	<h2>Statistiques</h2>
                    <div class="stat-col">
                        <span>Marques</span>
                        <p class="green">
                            {{ nbmarques }}</p>
                    </div>
                <div class="block">
                    <div class="clear"></div>
                </div>
            </div>
                    <div class="clear"></div>
            <!-- / ZONE STATISTIQUES -->
</div>
 <div class="grid_10">
            
            <!-- TABLEAU D'ENREGISTREMENT -->
            <div class="box round">
                <div class="block">
                <h1>GESTION DES MARQUES DE MONTURES</h1>
                    
                    <form action="{{ path('marque_create') }}" method="post" {{ form_enctype(form) }}> 
                        
                    <table border="1" class="marque">
                        {% if message %}
                    	<tr>
                            <td colspan="4" class="message">
                            	<i class="icon-warning"></i> 
                                <script type="text/javascript"> alert('{{ message }}'); window.location='{{ path('marque') }}';</script>
                                
                                {{ form_errors(form) }}
                                {{ form_errors(form.libelle) }}
                            </td>
                        </tr>
                        {% endif %}
                    	<tr>
                            <td class="libelle">
                                {{ form_label(form.libelle) }}
                            </td>
                            <td class="seperateur1"></td>
                            <td class="text-input">
                                {{ form_widget(form.libelle) }}
                            </td>
                            <td class="bouton-validation" colspan="3">
                                {{ form_rest(form) }}
                            </td>
                        </tr>
                        <tr class="seperateurV"></tr>
                        <tr class="seperateurV"></tr>
                        <tr>
                            <td colspan="7" class="retour-page">
                                <a href="{{ path('marque') }}"><i class="icon-undo"></i> Retour Ã  la liste des marques</a>
                            </td>
                        </tr>
                    </table>
                    
                    <div class="clear"></div>
